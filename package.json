{
  "name": "@globalconnect/query",
  "version": "3.0.0",
  "scripts": {
    "ng": "ng",
    "build": "ng build",
    "check:format": "prettier --config ./.prettierrc --check \"query/**/*{.ts,.js,.json,.css,.scss,.html}\"",
    "check:types": "tsc --noEmit -p ./tsconfig.lib.json && tsc --noEmit -p ./tsconfig.spec.json",
    "check:lint": "eslint -c .eslintrc.js  --ext .ts ./query --report-unused-disable-directives",
    "test": "npm run check:types && jest",
    "test:watch": "jest --watch --colors",
    "test:coverage": "npm run check:types && jest --coverage --colors --no-cache",
    "ci:publish": "npm run build && npm publish ./dist/query --access public"
  },
  "devDependencies": {
    "@angular-eslint/eslint-plugin": "16.0.3",
    "@angular/animations": "16.0.3",
    "@angular/cdk": "16.0.2",
    "@angular/cli": "16.0.3",
    "@angular/common": "16.0.3",
    "@angular/compiler": "16.0.3",
    "@angular/compiler-cli": "16.0.3",
    "@angular/core": "16.0.3",
    "@angular/forms": "16.0.3",
    "@angular/platform-browser": "16.0.3",
    "@angular/platform-browser-dynamic": "16.0.3",
    "@angular/router": "16.0.3",
    "@types/jest": "29.5.1",
    "@types/node": "18.16.16",
    "@types/uuid": "9.0.1",
    "@typescript-eslint/eslint-plugin": "5.59.8",
    "eslint": "8.41.0",
    "eslint-plugin-import": "2.27.5",
    "jest": "29.5.0",
    "jest-preset-angular": "13.1.1",
    "ng-packagr": "16.0.1",
    "prettier": "2.8.8",
    "rxjs": "7.8.1",
    "typescript": "5.3.3"
  },
  "peerDependencies": {
    "@angular/animations": "^16.0.0",
    "@angular/cdk": "^16.0.0",
    "@angular/common": "^16.0.0",
    "@angular/compiler": "^16.0.0",
    "@angular/core": "^16.0.0",
    "@angular/forms": "^16.0.0",
    "@angular/platform-browser": "^16.0.0",
    "@angular/platform-browser-dynamic": "^16.0.0",
    "@angular/router": "^16.0.0",
    "uuid": "^9.0.0"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/test-setup.ts"
    ],
    "collectCoverageFrom": [
      "**/lib/**/*.ts",
      "!**/**module.ts",
      "!**/__fixtures__/**",
      "!**/lib/**/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 99,
        "branches": 96,
        "functions": 97,
        "lines": 99
      }
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ]
  }
}
